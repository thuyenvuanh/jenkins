#!groovy

pipeline {
    agent {
        label 'Host'
    }
    parameters {
        string(name: 'BRANCH', defaultValue: 'containerise')
    }
    stages {
        stage('Checkout QuanLiPhongKhamNhaKhoa') {
            steps {
                checkout([
                        $class                           : 'GitSCM',
                        branches                         : [[name: '*/${BRANCH}']],
                        doGenerateSubmoduleConfigurations: false,
                        extensions                       : [[$class: 'CloneOptions', depth: 1, noTags: false, reference: '', shallow: true]],
                        submoduleCfg                     : [],
                        userRemoteConfigs                : [[url: 'git@github.com:datntse/QuanLiPhongKhamNhaKhoa.git']]
                ])
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t clinic-be .'
            }
        }
    }
}