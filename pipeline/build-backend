#!groovy

pipeline {
    agent {
        label 'Host'
    }
    parameters {
        string(name: 'BRANCH', defaultValue: 'containerise')
    }
    stages {
        stage('Checkout QuanLiPhongKhamNhaKhoa') {
            steps {
                checkout([
                        $class           : 'GitSCM',
                        branches         : [[name: '*/${BRANCH}']],
                        userRemoteConfigs: [[
                                                    credentialIds: 'github_ssh',
                                                    url          : 'git@github.com:datntse/QuanLiPhongKhamNhaKhoa.git'
                                            ]]
                ])
            }
        }
        stage('Build') {
            steps {
                sh '''
                    docker build -t clinic-be .
                    IMAGE_ID =$(docker image ls | grep clinic-be | awk \'{print \$3}\')
                '''
                script {
                    currentBuild.IMAGE_ID = ${IMAGE_ID}
                }
            }
        }
    }
}