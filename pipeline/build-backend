#!groovy

pipeline {
    agent {
        label 'Host'
    }
    parameters {
        string(name: 'BRANCH', defaultValue: 'containerise')
    }
    stages {
        stage('Check out') {
            steps {
                checkout([
                        $class           : 'GitSCM',
                        branches         : [[name: '*/${BRANCH}']],
                        userRemoteConfigs: [[
                                                    credentialsId:  'github_ssh',
                                                    url: 'git@github.com:datntse/QuanLiPhongKhamNhaKhoa.git'
                                            ]]
                ])
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t clinic-be .'
            }
        }
    }
}